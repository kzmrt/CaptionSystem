<div class="border border-left-0 border-right-0 border-bottom-0 py-3 row">
  <div class="col-10 px-3">
    <p class="my-1">
      <strong><%= "@#{caption.user.name}" %></strong>
      ・<span class="text-secondary"><%= time_ago_in_words(caption.created_at) %>
    </p>
    <table class="table table-condensed table-bordered">
      <tr>
        <td><font color="blue">タイトル</font></td>
        <td><%= caption.title %></td>
      </tr>
      <tr>
        <td><font color="blue">作家名</font></td>
        <td><%= caption.name %></td>
      </tr>
      <tr>
        <td><font color="blue">サイズ</font></td>
        <td><%= caption.size %></td>
      </tr>
      <tr>
        <td><font color="blue">画材</font></td>
        <td><%= caption.supplies %></td>
      </tr>
      <tr>
        <td><font color="blue">価格</font></td>
        <td><%= caption.price %></td>
      </tr>
      <tr>
        <td><font color="blue">自由コメント</font></td>
        <td><%= caption.memo %></td>
      </tr>
    </table>

    <div class="btn-group">
      <%= link_to "編集", edit_caption_path(caption.id), class: 'btn btn-info btn-lg' %>
      <%= link_to "削除", caption_path(caption.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn btn-warning btn-lg btn-block' %>
    </div>
  </div>
</div>
