<div class="row">
  <div class="col-md-3 col-12 d-note d-md-block">
    <div class="card p-2">
      <%= image_tag current_user.avatar.url, class: "card-img-top rounded-circle" %>
      <div class="card-body">
        <h4 class="card-title"><%= "@#{@user.name}" %></h4>
        <% if @user.admin? %>
          <p class="card-text">
            <span class="text-secondary">アメリカファースト!!<br>管理者だよ！</span>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-9 col-12">
    <%= link_to "新規登録", new_caption_path, class: 'btn btn-primary btn-lg btn-block' %>
    <%= render partial: "caption", collection: @captions %>
  </div>
  <%= paginate @captions %>
</div>
